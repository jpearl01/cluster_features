<h1>Listing features</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Length</th>
      <th>Sequence</th>
      <th>Start</th>
      <th>End</th>
      <th>Annotation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.f_type %></td>
        <td><%= feature.length %></td>
        <td><%=h truncate(feature.sequence, length: 80) %></td>
        <td><%= feature.start %></td>
        <td><%= feature.end %></td>
        <td><%= feature.annotation %></td>
        <td><%= link_to 'Show', feature %></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

