<h1>Listing projects</h1>

<table class="table table-striped table-condensed" >
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.comment %></td>
        <td><%= link_to 'Show', [current_user, project] %></td>
        <td><%= link_to 'Edit', edit_user_project_path(current_user, project) %></td>
        <td><%= link_to 'Destroy', [current_user, project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_user_project_path, class: "btn btn-default"  %>
