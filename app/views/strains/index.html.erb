<h1>Listing strains in project <%= link_to @project.name, user_projects_path(current_user) %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Length</th>
      <th>Contig num</th>
      <th>Genus</th>
      <th>Species</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= link_to strain.name, strain_contigs_path(strain) %></td>
        <td><%= strain.length %></td>
        <td><%= strain.contig_num %></td>
        <td><%= strain.genus %></td>
        <td><%= strain.species %></td>
        <td><%= link_to 'Show', strain %></td>
        <td><%= link_to 'Edit', edit_strain_path(strain) %></td>
        <td><%= link_to 'Destroy', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strain', new_project_strain_path, class: "btn btn-default" %>

